# ==============================================
# Odoo x Amalthea Environment Configuration
# ==============================================

# Application Configuration
NODE_ENV=development
PORT=3000
HOSTNAME=0.0.0.0

# Database Configuration
# For local development
MONGODB_URI=mongodb://admin:password123@localhost:27017/amalthea?authSource=admin

# For production (use MongoDB Atlas or your production MongoDB)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/amalthea?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Google Gemini AI API (for OCR functionality)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# MongoDB Express Admin UI (Optional)
MONGO_EXPRESS_USERNAME=admin
MONGO_EXPRESS_PASSWORD=admin123

# Production MongoDB Configuration (for docker-compose.prod.yml)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-production-mongo-password

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
CORS_ORIGIN=http://localhost:3000
TRUSTED_PROXIES=127.0.0.1,::1

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@amalthea.com
FROM_NAME=Amalthea Expense Management

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Monitoring Configuration (Optional)
SENTRY_DSN=your-sentry-dsn-here
ANALYTICS_ID=your-analytics-id-here
